<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Unpacker.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:root="clr-namespace:Unpacker"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Unpacker.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.svg"
        Title="Unpacker"
        Background="#121212">

    <StackPanel Margin="20" Spacing="20">
        <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!--
        <root:FileCard Title="Obsidian-1.0.tar.gz" />
        -->
        <!-- <root:AppInfoCard AppName="{Binding AppName}"  -->
        <!--                   AppVersion="{Binding AppVersion}" -->
        <!--                   IsVisible="{Binding !IsInstalling}"/> -->
        <!-- -->
        <root:InstallActions SourcePath="{Binding FilePath, Mode=TwoWay}"
                             IsSystemWide="{Binding IsSystemWide, Mode=TwoWay}"
                             IsInstalling="{Binding IsInstalling, Mode=TwoWay}"/>
    </StackPanel>

</Window>